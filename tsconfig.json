{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "esnext",
        "target": "ESNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
}